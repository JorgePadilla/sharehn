<div class="container">

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>


   
   	<h2 class="form-signin-heading">Please sign in</h2>
    <%= f.input :email, placeholder: "Email address", required: true, autofocus: true, :input_html => { :class => "form-control", :id => "inputEmail"} %>
    <%= f.input :password, placeholder: "Password", required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), :input_html => { :class => "form-control", :id => "inputPassword" } %>
    <%= f.input :password_confirmation, placeholder: "Password Confirmation", required: true %>
    
	<div class="checkbox">
          <label>
            <input type="checkbox" value="remember-me"> Remember me
          </label>
    </div>
    <%= f.button :submit, "Sign up",:class =>"btn btn-lg btn-primary btn-block" %>

 
<% end %>
<%= render "devise/shared/links" %> 
</div> <!-- /container -->



